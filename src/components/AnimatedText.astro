---
export interface Props {
  text?: string;
}

const {
  text = 'GARANTÍA DE CALIDAD - TRABAJOS EN ACERO - DISEÑOS EXCLUSIVOS - INNOVACIÓN Y ESTILO - SEGURIDAD Y DURABILIDAD - DISEÑO PERSONALIZADO ',
} = Astro.props;
---

<section class="py-5 overflow-hidden">
  <div class="max-w-6xl mx-auto px-4">
    <div class="marquee-container rounded-lg bg-white dark:bg-gray-800 border-2 border-blue-600 dark:border-blue-400">
      <div class="marquee-content">
        <span class="marquee-text text-black dark:text-white">{text}</span>
        <span class="marquee-text text-black dark:text-white">{text}</span>
        <span class="marquee-text text-black dark:text-white">{text}</span>
      </div>
    </div>
  </div>
</section>

<style>
  .marquee-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 18px 0;
  }

  .marquee-content {
    display: flex;
    animation: scroll 20s linear infinite;
    white-space: nowrap;
  }

  .marquee-text {
    flex-shrink: 0;
    padding: 0 2.5rem;
    font-size: 1.1rem;
    font-weight: 500;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.33%);
    }
  }

  .marquee-content:hover {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .marquee-text {
      font-size: 1rem;
      padding: 0 1.5rem;
    }

    .marquee-container {
      padding: 15px 0;
    }
  }
</style>
